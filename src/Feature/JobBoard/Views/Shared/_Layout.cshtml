    <link rel="stylesheet" href="~/JobBoard/css/style.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .cartItems {
            display: flex;
            flex-direction: column;
        }

        .cartItem {
            display: flex;
            flex-direction: row;
            margin-top: 20px;
            background-color: gray;
        }

        .cartCarInfo {
            margin-left: 10px;
        }

        .userBox {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .userProfileBox {
            display: flex;
            background-color: dimgray;
        }

        .userProfileImg {
            display: flex;
            justify-content: center;
            align-content: center;
            text-align: center;
        }

        

        .userProfileInfo {
            display: flex;
            margin-left: 15px;
            flex-direction: column;
        }
    </style>
</head>
<body>

    @Html.Sitecore().Placeholder("header")
    
