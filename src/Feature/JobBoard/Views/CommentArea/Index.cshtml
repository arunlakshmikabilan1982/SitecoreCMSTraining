                    <div class="thumb">
                        <img src="~/JobBoard/img/comment/comment_1.png" alt="">
                    </div>
                    <div class="desc">
                        <p class="comment">
                            @Html.Sitecore().Field("Description", Model.Item)
                        </p>
                        <div class="d-flex justify-content-between">
                            <div class="d-flex align-items-center">
                                <h5>
                                    <a href="#">@Html.Sitecore().Field("Name", Model.Item)</a>
                                </h5>
                                <p class="date">@Html.Sitecore().Field("Date", Model.Item)</p>
                            </div>
